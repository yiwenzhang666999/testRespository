    font-weight:bold;
}

#mapSetting input[type="checkbox"]:focus + label::before {
    box-shadow: 0 0 .1em .1em #58a;
}
#mapSetting input[type="checkbox"]:disabled + label::before {
    background-color: gray;
    box-shadow: none;
    color: #555;
}
</style>

