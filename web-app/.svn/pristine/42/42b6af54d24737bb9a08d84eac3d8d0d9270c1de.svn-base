/* tree */
.mini-tree-nowrap  .mini-tree-nodetext
{
    overflow:visible; 
}
.mini-tree-nowrap .mini-grid-table
{
    table-layout:auto;    
}
.mini-tree-nowrap .mini-tree-nodetitle
{
    overflow:visible;
}

/* showArrows */
body .mini-tree-showArrow .mini-tree-collapse .mini-tree-ec-icon
{
    background:url(images/tree/arrows.gif) no-repeat 0px 1px;
}
body .mini-tree-showArrow .mini-tree-expand .mini-tree-ec-icon
{
    background:url(images/tree/arrows.gif) no-repeat -16px 1px;
}
body .mini-tree-showArrow .mini-tree-indent,
body .mini-tree-showArrow .mini-tree-node-ecicon
{
    background:none;
}

/* dragdrop */
body .mini-tree-feedback-add .mini-tree-nodetext
{
    border:dotted 1px #aaa;
    background:#ddd;
    padding-left:3px;margin-top:-1px;
}

/* nodeclick */
.mini-tree-nodeclick .mini-tree-parentNode,
.mini-tree-nodeclick .mini-tree-parentNode .mini-tree-nodeshow
{
    cursor:pointer;
}

/* node loading */
body .mini-tree .mini-tree-loading .mini-tree-ec-icon
{
    background:#fff url(images/tree/loading.gif) no-repeat scroll 50% 50%;
}

