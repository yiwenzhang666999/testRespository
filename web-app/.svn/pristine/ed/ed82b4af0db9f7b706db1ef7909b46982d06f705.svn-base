.mini-textbox
{
    width:125px;
    height:21px;
    display:inline-block;
      
    padding:0;
    margin:0;
    border:0;
    vertical-align:middle;    
    overflow:hidden;	/*必须hidden*/
    /*position:static;*/
    position:relative;
    
}
.mini-textbox .mini-errorIcon, 
.mini-buttonedit .mini-errorIcon
{
    position:static;
    float:right;
    margin-right:2px;
}

/*修改*/
.mini-textbox-input
{
    cursor:text;
    background:#fff;
	border-top: 1px solid #AAA;
	border-left: 1px solid #AAA;
	border-right: 1px solid #DDD;
	border-bottom: 1px solid #DDD;       
    width:170px;
    height:19px;
    line-height:19px;
    
    font-family: Verdana;
    font-size: 9pt;        
    padding: 0;
    margin:0;
    padding-left:1px;
    padding-right:1px;
     
    outline:none;
    float:left;
}
.mini-required .mini-textbox-input,
.mini-required .mini-buttonedit-input
{
    background:#fff;
}

